<?xml version="1.0" encoding="UTF-8"?>
<normalization-rules>
	<vendor name="datadog">
		<api>https://api.{domain}/api/v1</api>

		<Credentials>
			<key label="DD-API-Key" id="DD-API-KEY" />
			<key label="DD-APPLICATION-Key" id="DD-APPLICATION-KEY" />
			<key label="Datadog Site (e.g. us5.datadoghq.com)" id="domain" />
		</Credentials>
		<monitors endpoint="/synthetics/tests" root-path="$.tests">
			<monitor-type vendor-type="api" sub-type="http"
				framework-type="REST_API">
				<field>
					<normalized-name>monitor_name</normalized-name>
					<source-jsonpath>$.name</source-jsonpath>
				</field>
				<field>
					<normalized-name>monitor_url</normalized-name>
					<source-jsonpath>$.config.request.url</source-jsonpath>
				</field>
				<field>
					<normalized-name>method</normalized-name>
					<source-jsonpath>$.config.request.method</source-jsonpath>
				</field>
				<field>
					<normalized-name>frequency_seconds</normalized-name>
					<source-jsonpath>$.options.tick_every</source-jsonpath>
				</field>
			</monitor-type>
		</monitors>
	</vendor>
	<vendor name="newrelic">
		<api>https://{domain}/synthetics</api>

		<Credentials>
			<key label="API-Key" id="Api-Key" />
			<key label="newrelic Site (e.g. synthetics.newrelic.com)" id="domain" />
		</Credentials>
		<monitors endpoint="/api/v3/monitors" root-path="$.monitors">
			<monitor-type vendor-type="SIMPLE" framework-type="URL">
				<field>
					<normalized-name>monitor_name</normalized-name>
					<source-jsonpath>$.name</source-jsonpath>
				</field>
				<field>
					<normalized-name>monitor_url</normalized-name>
					<source-jsonpath>$.uri</source-jsonpath>
				</field>

				<field>
					<normalized-name>frequency_minutes</normalized-name>
					<source-jsonpath>$.frequency</source-jsonpath>
				</field>
			</monitor-type>
		</monitors>
	</vendor>
</normalization-rules>